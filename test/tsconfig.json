{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../dist/test",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@infras/*": ["../src/infrastructure/*"],
      "@auth/*": ["../src/auth/*"],
      "@user/*": ["../src/user/*"],
      "@company/*": ["../src/company/*"],
      "@test/*": ["./*"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["node_modules"]
} 